<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.echallansystem.CheckVehicle">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="390dp"
            android:layout_height="150dp"
            android:background="@drawable/cover"
            android:scaleType="center" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/trafficlogo"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:contentDescription="@null"
            android:src="@drawable/trafficlogo"
            app:civ_border_color="#FF000000"
            android:layout_marginTop="67dp"
            app:civ_border_width="2dp"
            android:layout_below="@+id/user_id"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="368dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:hint="Enter Licence Number"
                android:background="@drawable/round"
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/searchView"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/btnSpecific"
                android:text="Verify" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verified Vehicle Details"
                android:id="@+id/tvShowdetail"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
